<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GetInforActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:background="@drawable/upper_dark"
        android:text="Easy to Start!\n\nEnter your name and get reward for watching ads! :)"
        android:textSize="22sp"
        android:textColor="#ffffff"
        android:padding="32dp"/>

    <LinearLayout
        android:layout_marginTop="64dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:text="Name"
            android:textSize="20sp"
            android:padding="16dp"
            android:gravity="center_horizontal"
            android:textColor="#D26200EE"/>

        <EditText
            android:id="@+id/name_field"
            android:inputType="textPersonName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/field_entry"
            android:padding="16dp"
            android:textStyle="bold"/>

    </LinearLayout>

    <ImageButton
        android:id="@+id/get_infor_next_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:layout_gravity="end"
        android:layout_marginEnd="32dp"
        android:adjustViewBounds="true"
        android:src="@drawable/right_chevron"
        android:backgroundTint="#00FFFFFF"
        android:scaleType="fitCenter"/>

</LinearLayout>
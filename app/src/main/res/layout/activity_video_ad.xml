<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VideoAdActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:background="@drawable/upper_dark"
            android:text="You data of video ads this week!\n:)"
            android:gravity="end|center_vertical"
            android:textSize="22sp"
            android:textColor="#ffffff"
            android:padding="32dp"/>

        <LinearLayout
            android:layout_marginTop="64dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:textStyle="bold"
                android:text="Ads Viewed"
                android:textSize="16sp"
                android:padding="16dp"
                android:gravity="center_horizontal|end"
                android:textColor="#D26200EE"/>

            <TextView
                android:id="@+id/ads_viewed_video"
                android:inputType="textPersonName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@drawable/field_entry"
                android:padding="16dp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:textStyle="bold"
                android:text="Ads Clicked"
                android:textSize="16sp"
                android:padding="16dp"
                android:gravity="center_horizontal|end"
                android:textColor="#D26200EE"/>

            <TextView
                android:id="@+id/ads_clicked_video"
                android:inputType="textPersonName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@drawable/field_entry"
                android:padding="16dp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/watch_ad_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Watch AD"
        android:enabled="false"
        android:backgroundTint="#3D5AFE"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="32dp"/>

    <TextView
        android:id="@+id/info_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:text=""/>

    <ImageView
        android:id="@+id/back_video"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:padding="16sp"
        android:src="@drawable/backnew"/>

    <ProgressBar
        android:id="@+id/loading_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

</RelativeLayout>